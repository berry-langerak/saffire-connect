<div class="span4">
    <div class="well">
        <h3>Top {{ items | length }} {{ title }}</h3>
        <table class="table ">
{% for item in items %}
            <tr>
                <td>{{ loop.index }}</td>
                {% if item.class == "Saffire\\UserBundle\\Entity\\User" %}
                <td><img src={{ gravatar(item.email, 50) }}> {{ item.name }}</td>
                {% else %}
                <td>{{ item.thumbnail|raw }} {{ item.name }}</td>
                {% endif %}
            </tr>
{% endfor %}
        </table>
        {#<p><a class="btn" href="#">View more &raquo;</a></p>#}
    </div>
</div>